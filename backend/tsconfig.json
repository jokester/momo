{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "scripts",
    "coverage",
    "build",
    "__test__",
    "bin",
    "jest.config.js"
  ]
}
