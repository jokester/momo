    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "scripts",
    "coverage",
    "test",
    "dist",
    "jest.config.js"
  ]
}
